
<p><%=@delete%></p>
<table class="table table-striped table-bordered">
  <thead>
    <th>Name</th>
    <th>Phone</th>
    <th>Adress</th>
    <th>Details</th>
    <th>Time</th>
    <th></th>
  </thead>
 
  <%@orders.each do |item|%>
  <tbody>
  
    <td><%=item.name%></td>
    <td><%=item.phone%></td>
    <td><%=item.adress%></td>
    <td><ol><%=item.order%></ol></td>
    <td><%=item.created_at.strftime("%d/%m/%Y | %H:%M")%></td>
    
    <td> 
     <form action="/orders" method="POST"  role="form" >
    <input type="hidden" name='delete[<%=item.id%>]' value="<%=item.id%>"> 
    <button class="btn btn-primary btn-xs" type="submit" >Delete</button>
    </form>
    </td>

  </tbody>
        <%end%>
        
</table>